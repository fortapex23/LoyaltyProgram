@using LoyaltyConsole.MVC.Areas.Admin.ViewModels.CashbackBalanceVMs
@using LoyaltyConsole.MVC.Areas.Admin.ViewModels.CustomerVMs
@model CashbackBalanceUpdateVM

@{
    List<CustomerGetVM> customers = ViewBag.Customers;
}

<!-- Content Start -->
<div class="content">
    <!-- Navbar Start -->
    <!-- Navbar End -->

    <!-- Form Start -->
    <div class="container-fluid pt-4 px-4">
        <form method="post">
            <div class="row g-4">
                <div class="col-sm-12 col-xl-6">
                    <div class="bg-light rounded h-100 p-4">
                        <h6 class="mb-4">Update CashbackBalance</h6>
                        <div style="margin-bottom: 1rem" class="form-group">
                            <label for="CustomerId">Customer</label>

                            <input type="text" class="form-control" value="@customers.FirstOrDefault(c => c.Id == Model.CustomerId)?.FullName" readonly />

                            <input type="hidden" asp-for="CustomerId" />
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="TotalCashback" type="text" class="form-control" id="floatingInput"
                                   placeholder="Total Cashback">
                            <label for="floatingInput">Cashback Gained</label>
                            <span asp-validation-for="TotalCashback" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="CashbackRedeemed" type="text" class="form-control" id="floatingInput"
                                   placeholder="Cashback Redeemed">
                            <label for="floatingInput">Cashback Redeemed</label>
                            <span asp-validation-for="CashbackRedeemed" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
            <div style="margin-top: 10px">
                <button type="submit" class="btn btn-primary">Update</button>
                <button asp-controller="customer" asp-action="" class="btn btn-secondary">Cancel</button>
            </div>
        </form>
    </div>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <!-- Form End -->

</div>
<!-- Content End -->