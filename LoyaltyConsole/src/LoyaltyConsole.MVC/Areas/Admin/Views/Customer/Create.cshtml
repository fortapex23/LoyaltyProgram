@using LoyaltyConsole.MVC.Areas.Admin.ViewModels.CustomerVMs
@model CustomerCreateVM

<!-- Content Start -->
<div class="content">
    <!-- Navbar Start -->
    
    <!-- Navbar End -->
    
    <!-- Form Start -->
    <div class="container-fluid pt-4 px-4">
        <form method="post" enctype="multipart/form-data">
            <div class="row g-4">
                <div class="col-sm-12 col-xl-6">
                    <div class="bg-light rounded h-100 p-4">
                        <h6 class="mb-4">Create Customer</h6>
                        <div class="mb-3">
                            <label for="formFile" class="form-label">Customer Image</label>
                            <input class="form-control" type="file" id="formFile" asp-for="Image">
                            <span asp-validation-for="Image" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="FullName" type="text" class="form-control" id="floatingInput"
                                   placeholder="name">
                            <label for="floatingInput">Full Name</label>
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Birthday</label>
                            <input asp-for="Birthday" class="form-control" style="width: 40%">
                            <span asp-validation-for="Birthday" class="text-danger"></span>
                        </div>
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    </div>
                </div>
            </div>
            <div style="margin-top: 10px">
                <button type="submit" class="btn btn-primary">Create</button>
                <button asp-action="" class="btn btn-secondary">Cancel</button>
            </div>
        </form>
    </div>
    <!-- Form End -->

</div>
<!-- Content End -->